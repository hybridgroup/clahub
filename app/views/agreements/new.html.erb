<div class="header">
  <h1>New agreement</h1>
</div>

<%= form_for @agreement, html: {class: "form-horizontal", role: "form"} do |form| %>
  <%= form.error_messages %>

  <div class="form-block">
    <%= form.label :name, "Name for the agreement" %> <br>
    <%= form.text_field :name %>
  </div>

  <div class="form-block">
    <%= form.label :github_repositories, "Select one or more repositories" %> <br>
    <%= form.select :github_repositories, @repos.collect { |repo| [owner_slash_name(repo), owner_slash_name(repo)] }, { include_blank: false }, { multiple: true, class: 'select-chosen', data: {placeholder: "GitHub repositories for #{current_user.nickname}"}, style: "width:450px;", tabindex: "1" } %>
    <a id="repo-help" tabindex="0" href="#" rel="popover" title="Public and organization repos" data-content='CLAHub can see organization repos if you have <a href="https://help.github.com/articles/permission-levels-for-an-organization-repository/">admin permissions for the repo</a> and your organization role is <a href="https://help.github.com/articles/publicizing-or-concealing-organization-membership/">publicized</a>.'>Why don't I see any repos?</a>
  </div>

  <div class="form-block">
    <%= form.label :text, "Enter your agreement text" %>
    <ul id="agreement-editor-tabs" class="agreement-editor-tabs">
      <li class="active"><a class="tab-edit" href="#edit-agreement" data-toggle="tab">Edit</a></li>
      <li><a class="tab-preview" href="#preview-agreement" data-toggle="tab">Preview</a></li>
    </ul>
    <div id="agreement-editor-content" class="tab-content">
      <div class="tab-pane active" id="edit-agreement">
        <%= form.text_area :text, placeholder: 'I, the contributor, agree to...', class: "span12", rows: 10 %>
        <span class="help-block">(You can use <a href="http://kramdown.gettalong.org/quickref.html">Markdown formatting</a>.)</span>
      </div>
      <div class="tab-pane" id="preview-agreement">
        <div class="preview-spinner">
          Loading...
        </div>
        <div class="preview well">
        </div>
      </div>
    </div>
  </div>

  <div class="field-selection-group">
    <label>Choose any extra fields to require on your agreement</label>
    <ul class="unstyled">
      <%= form.fields_for :agreement_fields, @agreement.agreement_fields.sort_by(&:ordering) do |f| %>
        <li>
          <%= f.hidden_field :field_id %>
          <%= f.check_box :enabled %>
          <%= f.label :enabled, f.object.field.label %>
          <% if description = f.object.field.description %>
            <a href="#" rel="popover" data-content='When signing your agreement, the person signing will see helper text for this field: <blockquote><%= description %></blockquote>'>What's this?</a>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>


  <div class="form-actions">
    <%= form.button 'Create agreement', :class => 'action' %>
  </div>
<% end %>


<% content_for :javascript do %>
  <script type="text/javascript">
    //<![CDATA[
      $(function() {
        $('select.select-chosen').chosen({
          search_contains: true,
          no_results_text: "Oops, nothing found!"
        });
        (function() {
          var previewTab = $('ul#agreement-editor-tabs a.tab-preview'),
              source     = $('div#agreement-editor-content textarea'),
              preview    = $('div#preview-agreement div.preview'),
              spinner    = $('div#preview-agreement div.preview-spinner');
          previewTab.on('shown', function (e) {
            preview.hide();
            spinner.show();
            $.ajax({
              url: '/markdown_preview',
              type: 'POST',
              data: { source: source.val() },
              dataType: 'html',
              accepts: { html: 'application/json' }
            }).success(function(newHtml, _, xhr) {
              preview.html(newHtml).show();
              spinner.hide();
            });
          })
        })();
      });
    //]]>
  </script>
<% end %>

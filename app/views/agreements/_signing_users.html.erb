<div id="signing-users">
  <% if @agreement.signatures.none? %>
    <h2>No one has signed yet.</h2>
  <% else %>
    <h2>Users who have signed:</h2>
    <ul>
      <% @agreement.signatures.each do |sign| %>
        <li><a href="https://github.com/<%= sign.user.nickname %>"><%= sign.user.nickname %></a> - <span><%=sign.ip.to_s %></span></li>
      <% end %>
    </ul>
    <p>
      <a href="<%= agreement_path(@agreement, format: 'csv') %>" class="action-download"><i class="fa fa-download"></i> Download CSV</a>
    </p>
  <% end %>
</div>
